<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>pasarelaMBean</managed-bean-name>
        <managed-bean-class>com.udea.controller.PasarelaMBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/ListaTransacciones.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>details</from-outcome>
            <to-view-id>/Detalles.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Detalles.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>list</from-outcome>
            <to-view-id>/ListaTransacciones.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>form</from-outcome>
            <to-view-id>/informacionBasica.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pago.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>valido</from-outcome>
            <to-view-id>/finalizarCompra.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>invalido</from-outcome>
            <to-view-id>/pago.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/finalizarCompra.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>saved</from-outcome>
            <to-view-id>/Detalles.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
